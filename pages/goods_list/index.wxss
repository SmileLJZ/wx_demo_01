.goods_tab .goods_item {
  display: flex;
  border-bottom: 1px solid #cccccc;
}
.goods_tab .goods_item .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_tab .goods_item .goods_img_wrap .goods_img {
  width: 70%;
}
.goods_tab .goods_item .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_tab .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_tab .goods_item .goods_info_wrap .goods_price {
  color: lightcoral;
  font-size: 32rpx;
}
